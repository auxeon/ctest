system_cxx_toolchain(
    name = "cxx",
    cxx_flags = select({
      "config//os:macos": [
        "-std=c++20",
      ],
      "config//os:linux": [
        "-std=c++20",
      ],
      "config//os:windows": [
        "/std:c++20"
      ],
      "DEFAULT": [],
    }),
    visibility = ["PUBLIC"],
)

